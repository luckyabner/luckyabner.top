---
const res = await fetch('http://localhost:4321/api/photos');
const data = await res.json();
const photos = data.photos || data; // 兼容新旧格式
---
<div class="columns-1 sm:columns-2 md:columns-3 lg:columns-4">
  {photos.map((photo) => (
      <img src={photo.url} alt={photo.title} class="mb-4" loading="lazy"/>
  ))}
</div>