---
import { Sun, Moon } from "@lucide/astro";
---

<button id="themeToggle" class="cursor-pointer hover:text-text">
  <Sun class="block dark:hidden" />
  <Moon class="hidden dark:block" />
</button>

<script is:inline>
  const initTheme = () => {
    const theme = (() => {
      const localStorageTheme = localStorage?.getItem("theme") ?? "";
      if (["dark", "light"].includes(localStorageTheme)) {
        return localStorageTheme;
      }
      if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
        return "dark";
      }
      return "light";
    })();

    if (theme === "light") {
      document.documentElement.classList.remove("dark");
    } else {
      document.documentElement.classList.add("dark");
    }

    window.localStorage.setItem("theme", theme);
  };

  const bindThemeToggle = () => {
    const handleToggleClick = () => {
      const element = document.documentElement;
      element.classList.toggle("dark");

      const isDark = element.classList.contains("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    };

    const themeToggle = document.getElementById("themeToggle");
    if (themeToggle) {
      // 移除之前的事件监听器（如果存在）
      themeToggle.removeEventListener("click", themeToggle.clickHandler);
      // 添加新的事件监听器并保存引用
      themeToggle.clickHandler = handleToggleClick;
      themeToggle.addEventListener("click", handleToggleClick);
    }
  };

  // 初始化主题
  initTheme();

  // 绑定事件监听器
  bindThemeToggle();

  // 监听 astro:page-load 事件，在每次页面加载后重新绑定事件
  document.addEventListener("astro:page-load", () => {
    initTheme();
    bindThemeToggle();
  });
</script>
