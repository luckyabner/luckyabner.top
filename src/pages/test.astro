---
import Layout from '../layouts/Layout.astro';
---

<Layout title='测试' description='测试'>
    <main class="w-full min-h-screen bg-background">
        <div class="max-w-2xl mx-auto p-6 space-y-4">
            <div class="p-4 bg-surface border border-border rounded-lg">
                <h2 class="text-text text-xl font-bold mb-2">主要内容区域</h2>
                <p class="text-text-secondary mb-2">次要文本内容</p>
                <p class="text-subtext text-sm">辅助说明文字</p>
            </div>
            
            <div class="p-4 bg-surface-secondary border border-border-hover rounded-lg">
                <h3 class="text-text mb-3">交互元素测试</h3>
                <div class="space-x-2">
                    <button class="px-4 py-2 bg-accent text-white rounded hover:bg-accent-hover">主要按钮</button>
                    <button class="px-4 py-2 bg-muted text-text rounded hover:bg-hover">次要按钮</button>
                    <a href="#" class="text-accent hover:text-accent-hover underline">链接文字</a>
                </div>
            </div>
            
            <div class="grid grid-cols-3 gap-2 text-sm">
                <div class="p-2 bg-success text-white rounded text-center">成功</div>
                <div class="p-2 bg-warning text-white rounded text-center">警告</div>
                <div class="p-2 bg-error text-white rounded text-center">错误</div>
            </div>
        </div>
    </main>
</Layout>